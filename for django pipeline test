pipeline {
    agent any

    environment {
        PYTHON_VERSION = '3.8'  
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    git branch: 'main', url: 'https://github.com/ishwar6/django_ci_cd.git'
                }
            }
        }
        
        stage('Build') {
            steps {
                sh "pip install -r requirements.txt"
            }
        }
        stage('Run Tests and Generate Coverage') {
            steps {
                sh "coverage run app/manage.py test"
                sh "coverage xml -o coverage.xml"
     
